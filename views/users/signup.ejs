<% layout("/layouts/boilerplate") %>

<%if(error && error.length){%>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%=error%>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </button>
</div>

<%}%>


<div class="row mt-3">
 
  <div class="col-6 offset-3">
    <h1 class="col-6 offset-3 mt-3 mb-3">SignUp on Wander Stay</h1>
<form action="/signup" class="needs-validation" novalidate method="post">

  <div class="mb-3">
    <label class="form-label" for="username">UserName</label>
    <input 
       type="text" 
       id="username"
       class="form-control" 
       name="username"  
      
       required
    />
</div>
  <div class="mb-3">
    <label class="form-label" for="email">Email</label>
    <input 
       type="text" 
       id="email"
       class="form-control" 
       name="email"  
      
       required
    />
    <div class="valid-feedback">Looks good</div>
  </div> 

  <div class="mb-3">
    <label class="form-label" for="password">Password</label>
    <input 
       type="password" 
       id="password"
       class="form-control" 
       name="password"  
      
       required
    />
    <div class="valid-feedback">Looks good</div>
  </div> 
      <button class="btn btn-success mb-2">SignUp</button>
</form>

</div>
</div>
